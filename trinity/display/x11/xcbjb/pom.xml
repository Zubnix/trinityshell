<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>org.trinity</groupId>
		<artifactId>display.x11</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<artifactId>XcbJb</artifactId>
	<name>X c bindings Java bindings</name>
	<properties>
		<swig.file>${basedir}/src/main/swig/xcb.i</swig.file>
		<swig.package>xcbjb</swig.package>
		<swig.outdir>${project.build.directory}/generated-sources/swig/${swig.package}</swig.outdir>
	</properties>

	<profiles>
		<profile>
			<id>unix_i386</id>
			<activation>
				<os>
					<family>unix</family>
					<arch>i386</arch>
				</os>
			</activation>
			<properties>
				<project.makefile>Makefile.unix.i386</project.makefile>
			</properties>
		</profile>

		<profile>
			<id>unix_x86_64</id>
			<activation>
				<os>
					<family>unix</family>
					<arch>amd64</arch>
				</os>
			</activation>
			<properties>
				<project.makefile>Makefile.unix.x86_64</project.makefile>
			</properties>
		</profile>
	</profiles>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>generate-swig-sources</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<mkdir dir="${swig.outdir}" />
								<exec dir="${project.build.sourceDirectory}" executable="swig"
									failonerror="true">
									<arg value="-java" />
									<arg value="-package" />
									<arg value="xcbjb" />
									<arg value="-o" />
									<arg value="${swig.outdir}/xcbJNI.c" />
									<arg value="${swig.file}" />
								</exec>
							</tasks>
						</configuration>
					</execution>
					<execution>
						<id>compile-swig-native</id>
						<phase>compile</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<exec dir="src/main/make" executable="make" failonerror="true">
									<arg value="-f" />
									<arg value="${project.makefile}" />
								</exec>
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>${swig.outdir}</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
